@using Actualizer.Models

@model RegisterViewModel


<div class="container">
    <div class="flat-form">
        <ul class="tabs">
            <li>
                <a href="#login" class="active">Login</a>
            </li>
            <li>
                <a href="#register">Register</a>
            </li>
        </ul>
        <div id="login" class="form-action show">
            <h1>Login</h1>
                @using (Html.BeginForm("Login", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                {
                <ul>
                    <li>
                        @Html.TextBoxFor(m => m.Login, new { type = "text", placeholder = "Username" });
                    </li>
                    <li>
                        @Html.TextBoxFor(m => m.Password, new { type = "password", placeholder = "Password" });
                    </li>
                    <li>
                        <input type="submit" value="Login" class="button" />
                    </li>
                    
                </ul>
                }
        </div>
        <!--/#login.form-action-->
        <div id="register" class="form-action hide">
            <h1>Register</h1>
            @using (Html.BeginForm("Registration", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
            {
                <ul>
                    <li>
                        @Html.TextBoxFor(m => m.Login, new { type = "text", placeholder = "Username" });
                    </li>
                    <li>
                        @Html.TextBoxFor(m => m.Email, new { type = "text", placeholder = "Email" });
                    </li>
                    <li>
                        @Html.TextBoxFor(m => m.Password, new { type = "password", placeholder = "Password" });
                    </li>
                    <li>
                        @Html.TextBoxFor(m => m.Password, new { type = "password", placeholder = "RepeatPassword" }); 
                    </li>
                </ul>
            }
        </div>
    </div>
</div>
<script class="cssdeck" src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>